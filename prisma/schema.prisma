generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 👤 المستخدم
model User {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username   String   @unique
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // حقول إضافية
  bio        String?
  botName    String?

  // لوحة التحكم
  role       Role     @default(USER) // USER أو ADMIN
  blocked    Boolean  @default(false) // إذا كان محظور

  // العلاقات
  bots          Bot[]         @relation("UserBots")
  conversations Conversation[]
}

// 🤖 البوت
model Bot {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String
  image       String?
  personality String?
  isPublic    Boolean  @default(true)
  creatorId   String?  @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  accent      String?
  apiKey      String?
  topEntry TopBot? @relation("TopRank")
}


  // التصنيف
  categoryId String? @db.Uuid
  category    Category? @relation(fields: [categoryId], references: [id])

  // علاقات
  creator     User?    @relation("UserBots", fields: [creatorId], references: [id])
  conversations Conversation[] @relation("BotConversations")
}

// 🗂️ التصنيفات (Adventure - Role-play - Horror ...)
model Category {
  id    String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name  String  @unique
  bots  Bot[]
}

// 💬 المحادثة
model Conversation {
  id        String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String       @db.Uuid
  botId     String?      @db.Uuid
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  title     String?

  // العلاقات
  user      User         @relation(fields: [userId], references: [id])
  bot       Bot?         @relation("BotConversations", fields: [botId], references: [id])
  messages  Message[]
}

// 📩 الرسائل داخل المحادثة
model Message {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  conversationId String       @db.Uuid
  sender         String       // "user" أو "bot"
  text           String
  createdAt      DateTime     @default(now())

  conversation   Conversation  @relation(fields: [conversationId], references: [id])
}

// 🏷️ الأدوار (مستخدم عادي أو أدمن)
enum Role {
  USER
  ADMIN
}
/// 🏆 أفضل 10 بوتات (الصف العاشر الأخير هو رقم 10)
model TopBot {
  id    Int    @id @default(autoincrement())
  rank  Int    @unique          // 1-10
  botId String @unique @db.Uuid // يشير إلى Bot
  bot    Bot    @relation("TopRank", fields: [botId], references: [id])
}

